<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterEmployer"
    android:orientation="vertical">

    <TextView
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="60sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#C9C9C9"
        android:layout_marginTop="75dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Step 1: Enter your company email"
                android:textSize="24sp"
                android:layout_marginHorizontal="10dp"
                android:textColor="#1B128A"
                android:textStyle="bold"/>
            
            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Email"
                android:textSize="28sp"
                android:textColorHint="#675FC8"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Step 2: Enter company name"
                android:textSize="24sp"
                android:layout_marginHorizontal="10dp"
                android:textColor="#1B128A"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:textSize="28sp"
                android:textColorHint="#675FC8"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="25dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:paddingHorizontal="27dp"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:backgroundTint="#747DBD"
        android:layout_marginTop="130dp"
        android:onClick="onClick"/>

</LinearLayout>