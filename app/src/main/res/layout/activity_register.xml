<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical">

    <TextView
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle=""
        android:textSize="60sp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account status"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:textColor="#8383A8"
        android:textSize="20sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#C9C9C9"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am a..."
                android:textSize="35sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/freelancerBtn"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freelancer"
                android:textAllCaps="false"
                android:backgroundTint="#8383A8"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:onClick="onClick"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Looking for a job / experience in a workplace to further and improve my skills"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="7dp"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/employerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employer"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:backgroundTint="#8383A8"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:onClick="onClick"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Looking for special talents for help in development / in general in my workplace"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="7dp"
                android:textSize="14sp"
                android:paddingBottom="30dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>